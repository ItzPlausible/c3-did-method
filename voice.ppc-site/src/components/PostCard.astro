---
import FormattedDate from './FormattedDate.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  heroImage?: string;
  slug: string;
  category?: string;
  featured?: boolean;
}

const { title, description, pubDate, heroImage, slug, category, featured = false } = Astro.props;
---

<article class:list={['post-card', { 'post-card--featured': featured }]}>
  {heroImage && (
    <a href={`/posts/${slug}`} class="post-card__image-link">
      <div class="post-card__image-wrapper">
        <img src={heroImage} alt="" class="post-card__image" loading="lazy" />
      </div>
    </a>
  )}
  
  <div class="post-card__content">
    {category && (
      <a href={`/posts/category/${category}`} class="post-card__category">
        {category.replace('-', ' ')}
      </a>
    )}
    
    <h3 class="post-card__title">
      <a href={`/posts/${slug}`}>{title}</a>
    </h3>
    
    <p class="post-card__description">{description}</p>
    
    <div class="post-card__meta">
      <FormattedDate date={pubDate} format="short" />
    </div>
  </div>
</article>

<style>
  .post-card {
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: 
      transform var(--transition-base),
      box-shadow var(--transition-base);
  }
  
  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .post-card--featured {
    grid-column: span 2;
  }
  
  @media (max-width: 768px) {
    .post-card--featured {
      grid-column: span 1;
    }
  }
  
  .post-card__image-link {
    display: block;
  }
  
  .post-card__image-wrapper {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }
  
  .post-card--featured .post-card__image-wrapper {
    aspect-ratio: 21 / 9;
  }
  
  .post-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }
  
  .post-card:hover .post-card__image {
    transform: scale(1.05);
  }
  
  .post-card__content {
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    flex: 1;
  }
  
  .post-card--featured .post-card__content {
    padding: var(--space-8);
  }
  
  .post-card__category {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--gold);
    text-decoration: none;
    margin-bottom: var(--space-2);
    transition: color var(--transition-fast);
  }
  
  .post-card__category:hover {
    color: var(--gold-dark);
  }
  
  .post-card__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: var(--space-2);
  }
  
  .post-card--featured .post-card__title {
    font-size: var(--text-2xl);
  }
  
  .post-card__title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .post-card__title a:hover {
    color: var(--crimson);
  }
  
  .post-card__description {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: var(--space-4);
    flex: 1;
    
    /* Clamp to 3 lines */
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .post-card--featured .post-card__description {
    font-size: var(--text-base);
    -webkit-line-clamp: 4;
  }
  
  .post-card__meta {
    font-size: var(--text-xs);
    color: var(--gray-400);
    margin-top: auto;
  }
</style>
